
<ol reversed class="postlist">
{%- for post in postslist | getAllPostNotIgnored  | reverse %}
	<li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
		<a href="{{ post.url }}" class="postlist-link">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
		<time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate("LLLL yyyy") }}</time>
		{%- set myAuthors = authors | getAuthors(metadata.authors, post.data.author) %}
		<div class="postlist-authors">
			{%- for author in myAuthors %}
			<article>
				<img src="{{author.photo}}" style="max-height: 100px; padding-right: 10px">
				<h3 class="postlist-title">{{ author.name }}</h3>
			</article>
			{%- endfor %}
		</div>
		<ul>
			{%- for tag in post.data.tags | filterTagList %}
			{%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
			<li>{{ tag }}</li>
			{%- endfor %}
		</ul>
	</li>
{%- endfor %}
</ol>
